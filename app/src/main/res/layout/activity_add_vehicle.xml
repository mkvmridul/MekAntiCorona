<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyVehiclePackage.AddNewVehicle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background4" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_extra_light"
                        android:text="@string/please_allocate_"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:elevation="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_car"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_button1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_car"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/car_white"/>

                            <TextView
                                android:id="@+id/tv_car"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:text="Car"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="12dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_background"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_bike"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp">


                                <ImageView
                                    android:id="@+id/image_bike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/bike_black"/>

                                <TextView
                                    android:id="@+id/tv_bike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="center"
                                    android:text="Bike"
                                    android:textColor="@color/black" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_extra"
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/choose_brand"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:background="@color/background_spinner"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:spinnerMode="dropdown" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/choose_model"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:background="@color/background_spinner"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:spinnerMode="dropdown" />


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Vehicle Fuel Type"
                        android:fontFamily="@font/gotham_extra_light"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/vehicle_fuel_type"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:textColor="@color/black"
                        android:paddingTop="12dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="-8dp"
                        android:background="@color/background4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Manufacturing Year"
                        android:fontFamily="@font/gotham_extra_light"
                        android:textSize="10sp" />

                    <Spinner
                        android:id="@+id/manufacturing_year"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:spinnerMode="dropdown" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="-8dp"
                        android:background="@color/background4" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangular_background"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Vehicle Insurance"
                            android:textColor="@color/black" />

                        <Switch
                            android:id="@+id/switch_insurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:theme="@style/SwitchCompatTheme"
                            android:trackTint="@color/black" />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/insu_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="-4dp"
                        android:backgroundTint="@color/background4"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Insurance Due Date(optional)"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="date"
                        android:longClickable="false"
                        android:onClick="openCalender"/>

                    <EditText
                        android:id="@+id/plate_no"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="-4dp"
                        android:backgroundTint="@color/background4"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="License Plate Number"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:inputType="text"
                        android:maxLength="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center|start"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Licence plate image (optional)"
                            android:textSize="10sp"/>



                        <ImageView
                            android:id="@+id/open_camera"
                            android:layout_width="30dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:paddingBottom="4dp"
                            android:src="@drawable/camera" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="@dimen/size200dp"
                        android:layout_height="@dimen/size200dp"
                        android:layout_marginTop="@dimen/size15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_car_back" />

                    <TextView
                        android:id="@+id/remove_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/gotham_book_regular"
                        android:text="@string/remove"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/background4" />

                <TextView
                    android:id="@+id/add_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    style="@style/button_style_1"
                    android:text="@string/add_vehicle" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>