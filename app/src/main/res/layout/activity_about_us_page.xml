<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs.AboutUsPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:src="@mipmap/about_us" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Toolbaar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/background_spinner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/arrow_back_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="About Us"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background4"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="44dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_mekvahan"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textSize="16sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="16dp"
                    android:id="@+id/recycler_view_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <!--<TextView-->
                <!--android:layout_marginTop="12dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="@font/gotham_book_regular"-->
                <!--android:text="@string/longtext1"/>-->


                <TextView
                    android:layout_marginTop="44dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:fontFamily="@font/gotham_book_regular"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <!--<TextView-->
                    <!--android:layout_marginTop="16dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:lineSpacingExtra="4dp"-->
                    <!--android:text="Office Address :-\nMekvahan\nNew Delhi, 110077"-->
                    <!--android:fontFamily="@font/gotham_book_regular"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textStyle="bold"/>-->

                <TextView
                    android:id="@+id/email"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email :- support@mekvahan.com"
                    android:fontFamily="@font/gotham_book_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/call"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="4dp"
                    android:layout_height="wrap_content"
                    android:text="Connect\n[9AM - 9PM] :- +917838878899"
                    android:fontFamily="@font/gotham_book_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>



            </LinearLayout>

        </ScrollView>







    </LinearLayout>


</FrameLayout>