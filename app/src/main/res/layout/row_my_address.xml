<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_white"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/text_size16dp"
    android:layout_marginRight="@dimen/text_size16dp"
    android:layout_marginBottom="8dp"
    android:paddingLeft="@dimen/text_size16dp"
    android:paddingRight="@dimen/text_size16dp"
    android:paddingTop="@dimen/text_size16dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/image_address_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/addresshome" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/text_size16sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium_regular"
            android:text="Home"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/full_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Address line goes here.. "
            android:textSize="12sp"
            android:textColor="@color/chart_light_grey"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/edit"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:src="@drawable/delete"
        android:visibility="gone"/>

</LinearLayout>