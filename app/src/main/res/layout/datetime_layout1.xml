<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <!--Am,Pm-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/day_grey"
                android:text="AM"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_background"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:drawablePadding="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/night_white"
                android:text="PM"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--timings-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/am_timings"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t1"
                    style="@style/time_unselected_style"
                    android:layout_width="0dp"
                    android:background="@drawable/red_background"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="08-09" />

                <TextView
                    android:id="@+id/t2"
                    style="@style/time_unselected_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="09-10" />

                <TextView
                    android:id="@+id/t3"
                    style="@style/time_unselected_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10-11" />

                <TextView
                    android:id="@+id/t4"
                    style="@style/time_unselected_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11-12" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pm_timings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t5"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:background="@drawable/border_white"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="12-01" />

                    <TextView
                        android:id="@+id/t6"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:background="@drawable/border_white"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="01-02" />

                    <TextView
                        android:id="@+id/t7"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="02-03"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/t8"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="03-04" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/t9"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="04-05" />

                    <TextView
                        android:id="@+id/t10"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="05-06" />

                    <TextView
                        android:id="@+id/t11"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="06-07" />

                    <TextView
                        android:id="@+id/t12"
                        style="@style/time_unselected_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="07-08" />


                </LinearLayout>


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</LinearLayout>