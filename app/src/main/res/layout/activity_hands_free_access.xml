<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupAndLogin.Login.HandsFreeAccess">

    <include layout="@layout/toolbar_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background4"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hand_free_access_text"
                android:fontFamily="@font/montserrat_regular"/>


            <TextView
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="@string/to_activate"/>

            <TextView
                android:drawableLeft="@drawable/vehicle"
                android:layout_marginTop="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="16dp"
                android:gravity="center|start"
                android:fontFamily="@font/gotham_medium_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your myVehicleTable details."/>

            <TextView
                android:drawableLeft="@drawable/card"
                android:layout_marginTop="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="16dp"
                android:gravity="center|start"
                android:fontFamily="@font/gotham_medium_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A valid card."/>

            <TextView
                android:drawableLeft="@drawable/personal"
                android:layout_marginTop="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="16dp"
                android:gravity="center|start"
                android:fontFamily="@font/gotham_medium_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your personal information."/>


        </LinearLayout>

    </ScrollView>

    <!--Bottm button-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentBottom="true"
            android:elevation="8dp"
            android:background="@color/home_background"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/activate"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                style="@style/button_style_1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activate"/>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>