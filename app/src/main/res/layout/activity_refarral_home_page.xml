<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Referral.RefarralsHomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/hand"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/arrow_back_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Referrals"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>



        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referrals"
                android:textColor="@color/black"
                android:fontFamily="@font/gotham_medium_regular"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refer_1"/>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/invite_and_earn"
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_and_earn"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="64dp"
                    android:paddingRight="64dp"
                    android:fontFamily="@font/gotham_medium_regular"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>