<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Referral.ReferAndEarnPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/arrow_back_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="Refer and Earn"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/want_to_"
                android:textColor="@color/black"
                android:fontFamily="@font/gotham_medium_regular"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refer_1"/>
        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background4"/>

        <TextView
            android:id="@+id/how_it_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How it works"
            android:padding="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_medium_regular"
            android:textSize="12sp"
            android:drawableRight="@drawable/arrow_right_red"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background4"/>

        <TextView
            android:id="@+id/view_your_refarrals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View your Refarrals"
            android:padding="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_medium_regular"
            android:textSize="12sp"
            android:drawableRight="@drawable/arrow_right_red"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background4"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:src="@mipmap/hand2"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your invite code"
                android:textSize="10sp"
                android:fontFamily="@font/montserrat_regular"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/rectangular_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="MV10"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/gotham_medium_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/copy_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/gotham_medium_regular"
                    android:textSize="16sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/invite_and_earn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_and_earn"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="64dp"
                    android:paddingRight="64dp"
                    android:fontFamily="@font/gotham_medium_regular"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"/>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>