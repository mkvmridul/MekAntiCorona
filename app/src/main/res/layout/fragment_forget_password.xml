<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignupAndLogin.Login.LoginHomePage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Set Password"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/gotham_book_regular"
                    android:text="Enter your new password"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextLabel"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="New Password"
                        android:textSize="16sp"
                        android:paddingTop="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gotham_book_regular"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextLabel"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:textSize="16sp"
                        android:paddingTop="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gotham_book_regular"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextLabel"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="4 digit otp"
                        android:maxLength="4"
                        android:textSize="16sp"
                        android:paddingTop="12dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/gotham_book_regular"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>





                <TextView
                    android:id="@+id/proceed"
                    style="@style/button_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:background="@drawable/background_button1"
                    android:text="Proceed" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </FrameLayout>

</FrameLayout>