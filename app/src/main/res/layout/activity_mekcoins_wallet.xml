<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wallet.MekCoinsWallet">

    <!--Toolbaar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background4"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/arrow_back_red" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MekCoins Wallet"
            android:singleLine="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/redeem_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem code"
            android:layout_marginTop="4dp"
            style="@style/button_style_redeem_code"/>

    </LinearLayout>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--android:layout_marginTop="56dp"-->
        <!--android:id="@+id/swipe_to_refresh"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="28dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:layout_height="wrap_content"
                        android:text="Available Coins"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_for_coins"
                        android:visibility="visible"
                        android:layout_marginRight="16dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:id="@+id/available_coins"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_gravity="bottom"
                        android:textSize="16sp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="24dp"
                    android:background="@color/background4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/input_amount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="Enter amount"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/promocode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promocode?"
                            android:textSize="12sp"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="8dp"
                            android:fontFamily="@font/gotham_book_regular"
                            android:textColor="@color/colorPrimary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/option1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/border_light_black"/>

                        <TextView
                            android:id="@+id/option2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="200"
                            android:layout_marginLeft="12dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="24dp"
                            android:textColor="@color/black"
                            android:paddingRight="24dp"
                            android:gravity="center"
                            android:background="@drawable/border_light_black"/>

                        <TextView
                            android:id="@+id/option3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="300"
                            android:layout_marginLeft="12dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:gravity="center"
                            android:background="@drawable/border_light_black"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/add_coins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Add Money"
                        style="@style/button_style_1"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/statements"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:fontFamily="@font/gotham_medium_regular"
                    android:layout_height="wrap_content"
                    android:text="Statements"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_medium_regular"
                    android:layout_height="wrap_content"
                    android:text="FAQs"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

            <ExpandableListView
                android:id="@+id/expandableListView_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/background4"
                android:dividerHeight="1dp"
                android:groupIndicator="@null">

            </ExpandableListView>


        </LinearLayout>


    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>