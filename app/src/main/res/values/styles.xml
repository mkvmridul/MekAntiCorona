<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="UI_NavigationView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/gotham_xlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UI_ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="UI_HoverText">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/gotham_xlight</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/tab_text_selector</item>
    </style>

    <style name="MyCustomTabLayout1" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance1</item>
    </style>

    <style name="MyCustomTextAppearance1" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/tab_text_selector1</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/grey</item>

    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size11sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UI_AboutUs">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="UI_Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UI_Button.Active">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="UI_Button.InActive">
        <item name="android:background">@color/black1</item>
    </style>

    <style name="UI_Button.Corner">
        <item name="android:background">@drawable/round_btn1</item>
    </style>

    <style name="UI_Calendar_Header" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#878787</item>
    </style>

    <style name="UI_Calendar_WeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">#2c2c2c</item>
    </style>

    <style name="UI_Calendar_DateText" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_back_circle</item>
    </style>

    <style name="UI_TextAppearance">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>












    <!--mani-->


    <style name="button_style_1">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_style_2">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button2</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="button_style_3">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button3</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:fontFamily">@font/gotham_book_regular</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">#4cbc17</item>
    </style>

    <style name="BillAnimation1">
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="booking_time">
        <item name="android:drawableRight">@drawable/arrow_right_white</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="booking_order">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="animationSlideRightToRight">
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="time_unselected_style">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/border_white</item>
        <item name="android:fontFamily">@font/gotham_medium_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="time_selected_style">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/time_background</item>
        <item name="android:fontFamily">@font/gotham_medium_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>


    <style name="pin">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button1</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="button_style_redeem_code">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_button1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_style_pay_now">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_button1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    <!---srishti-->
    <style name="feedbackRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">28dip</item>
    </style>
</resources>
